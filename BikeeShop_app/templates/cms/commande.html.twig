{% extends 'layout.html.twig' %}

{% block title %}BikeeShop - Your Bicycle Store !{% endblock %}

{% block content %}
 <div class="row">
        <div class="col-lg-12">
            <h1>Veuillez remplir vos coordonn√©es :</h1>
        </div>
    </div>

    <hr/>
     {% for flash_type, messages in app.flashes %}
        {% for message in messages %}
        <div class="alert alert-{{ flash_type }}" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    {% endfor %}
    {{ form_start(form) }}

        <div class="form-group">
                {{ form_errors(form.nom) }}
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'placeholder': form.nom.vars.label} }) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.prenom) }}
            {{ form_label(form.prenom) }}
            {{ form_widget(form.prenom, { 'attr': {'class': 'form-control', 'placeholder': form.prenom.vars.label} }) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.adresse) }}
            {{ form_label(form.adresse) }}
            {{ form_widget(form.adresse, { 'attr': {'class': 'form-control', 'placeholder': form.adresse.vars.label} }) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.email) }}
            {{ form_label(form.email) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': form.email.vars.label} }) }}
        </div>

        <button type="submit" class="btn btn-info">Valider</button>

    {{ form_end(form) }}
{% endblock %}